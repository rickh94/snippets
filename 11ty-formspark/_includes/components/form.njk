<script src="https://unpkg.com/@botpoison/browser" async></script>
<form
  action="{{ env.formsparkURL }}"
  class="flex-col w-full" id="contact-form"
  data-botpoison-public-key="{{ env.botpoisonPublicKey }}"
>
  {#      honeypot and formspark configuration #}
  <input type="hidden" name="_important" id="_important">
  <input type="hidden" name="_redirect" value="{{ env.url }}/message-sent">
  <input type="hidden" name="_append" value="false">
  <input type="hidden" name="_error" value="{{ env.url }}/message-failed">
  <div class="flex-col mb-1">
    <h3 class="text-2xl text-left font-bold">FORM TITLE</h3>
    <h6 class="text-slate-900">FORM SUBTITLE</h6>
  </div>
  <div class="flex gap-2 w-full flex-col md:flex-row">
    <div class="w-full gap-3 md:w-1/3 flex flex-col">
      <div class="form-control">
        <label for="name" class="font-bold md:text-lg mb-1 block">LABEL</label>
        <input type="text" name="name" id="name" required placeholder="FORM FIELD">
      </div>
    </div>
    <div class="form-control md:w-2/3">
      <label for="message" class="font-bold md:text-lg block">TEXT AREA</label>
      <textarea name="message"
                id="message"
                placeholder="Message"
                class="h-[11.75rem] w-full placeholder-gray-500 text-black bg-white rounded-sm p-1 sm:flex-grow shadow focus:shadow-lg focus:text-black transition ease-out duration-200"
                required
                spellcheck
      ></textarea>
    </div>
  </div>
  <div class="mt-3 sm:mt-2 flex flex-col sm:flex-row gap-2 justify-end">
    <button type="submit" class="submit-button selectable" id="submit-button">Send</button>
  </div>

</form>

